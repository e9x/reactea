{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "../../types",
    "typeRoots": ["node_modules/@types", "../../types"]
  },
  "include": ["src/**/*.ts", "../../types/**/*"]
}
